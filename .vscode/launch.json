        "name": "Windows - Debug Controller",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/out/controller_main.exe",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${fileDirname}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
